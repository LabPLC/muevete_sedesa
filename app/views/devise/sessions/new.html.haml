
.container
  .row
    .col-md-4.col-md-offset-4.movido
      .login-banner.text-center
        %h1
          %i.fa.fa-users
          ¡Cuídate!
      = render 'shared/notifications'
      .portlet.portlet-orange
        .portlet-heading.login-heading
          .portlet-title
            %h4
              Inicia sesión
          .portlet-widgets
            = button_to  new_user_registration_path, :method => :get, :class => "btn btn-white btn-xs" do
              %i.fa.fa-plus-circle
              ¿Nuevo usuario?

          .clearfix
        .portlet-body
          = render "devise/shared/links"
          %hr.black_color
            %span.black_color
              ¿No tienes Facebook / Twitter / G+?
          = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
            %div.form-group

              %br/
              = f.email_field :email, :autofocus => true, class: "form-control", placeholder: "E-mail"
            %div.form-group
              %br/
              = f.password_field :password, class: "form-control", placeholder: "Password"
            - if devise_mapping.rememberable?
              %div.form-group
                = f.check_box :remember_me
                = f.label "recordarme?", class: 'black_color'
            %div= f.submit "Iniciar Sesión", class: "btn btn-lg btn-orange btn-block"

