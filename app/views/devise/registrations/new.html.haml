.container
  .row
    .col-md-4.col-md-offset-4
      .login-banner.text-center
        %h1
          %i.fa.fa-users
          ¡Cuídate!
      .portlet.portlet-orange
        .portlet-heading.login-heading
          .portlet-title
            %h4
              ¡Regístrate!
          .clearfix
        .portlet-body
          = render "devise/shared/links"
          %hr
          ¿No tienes cuentas de Twitter / Facebook / G+?
          = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
            = devise_error_messages!
            %div.form-group
              %br/
              = f.email_field :email, :autofocus => true, class: "form-control", placeholder: "E-mail"
            %div.form-group
              %br/
              = f.password_field :password, class: "form-control", placeholder: "Password"
            %div.form-group
              %br/
              = f.password_field :password_confirmation, class: "form-control", placeholder: "Confirma tu Password"
            %div= f.submit "Registrate", class: "btn btn-lg btn-orange btn-block"

